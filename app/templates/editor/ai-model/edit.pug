extends /templates/base

block content
  div
    ol.breadcrumb
      li
        a(href="/editor", data-i18n="editor.main_title") CodeCombat Editors
      li
        a(href="/editor/ai-model", data-i18n="editor.ai_model_title") AIModel
      li.active
        | #{view.aiModel.get('_id')}

  - var authorized = !me.get('anonymous');
  button.ai-model-tool-button.btn.btn-primary#i18n-button(data-i18n="editor.pop_i18n", disabled=authorized === true ? undefined : "true")
  button.ai-model-tool-button.btn.btn-primary#delete-button(data-i18n="editor.delete", disabled=me.isAdmin() === true ? undefined : "true")
  button.ai-model-tool-button.btn.btn-primary#save-button(data-i18n="common.save", disabled=authorized === true ? undefined : "true")

  h3
    span(data-i18n="editor.ai_model_edit_title")
    |: #{view.aiModel.attributes._id}

  #ai-model-treema

  hr

  // TODO: visualize the model here
